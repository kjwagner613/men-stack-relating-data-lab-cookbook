<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/style.css" />
    <link rel="icon" href="/favicon.ico" />
    <title>New Recipe</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="new-recipe-container">
      <h1>Add New Recipe</h1>
      <form action="/recipes" method="POST" class="new-recipe-form">
        <!-- Recipe Name -->
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" name="name" required />
        </div>

        <!-- Instructions -->
        <div class="form-group">
          <label for="instructions">Instructions:</label>
          <textarea name="instructions"></textarea>
        </div>

        <!-- Existing Ingredients -->
        <div class="form-group">
          <div class="form-group">
            <h3>Choose Existing Ingredients:</h3>
            <div class="ingredients-grid">
              <% if (allIngredients.length > 0) { %>
                <% allIngredients.forEach(ingredient => { %>
                  <label class="ingredient-checkbox">
                    <input type="checkbox" name="ingredientIds" value="<%= ingredient._id %>" />
                    <%= ingredient.name %>
                  </label>
                <% }) %>
              <% } else { %>
                <p>No existing ingredients found.</p>
              <% } %>
            </div>
          </div>

        <!-- Add New Ingredients -->
        <div class="form-group">
          <h3>Or Add New Ingredients:</h3>
          <input
            type="text"
            name="newIngredients"
            placeholder="e.g. cinnamon, olive oil"
          />
        </div>

        <!-- Submit Button -->
        <div class="form-group">
          <button type="submit">Create Recipe</button>
        </div>
      </form>
    </div>
  </body>
</html>
